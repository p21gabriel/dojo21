<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="{{ assets('css/style.css') }}?v={{ version() }}">
    <title>Dojo21 | Login</title>
</head>
<body>

<main class="container" id="login">
    <section id="login-section" class="form text-center">
        <form method="POST" id="login-form">
            <h2>Login</h2>

            <div class="text-left">
                <label for="email">E-mail</label>
                <input
                    autocomplete="off"
                    class="input-login-singup"
                    type="email"
                    placeholder="E-mail"
                    id="email"
                    name="email"
                    value=""
                    autofocus
                >
            </div>

            <div class="text-left">
                <label for="password">Senha</label>
                <input autocomplete="off"
                       class="input-login-singup"
                       type="password"
                       placeholder="Senha"
                       id="password"
                       name="password"
                       value=""
                >
            </div>
            <div>
                <a href="#" id="logar" class="btn btn-block">Logar</a>
                <a href="/signup" class="btn btn-block">Cadastro de usu√°rio</a>
            </div>
        </form>
    </section>
</main>

<script src="{{ assets('libs/jquery-3.7.1.min.js') }}?v={{ version() }}" type="text/javascript"></script>
<script src="{{ assets('js/global.js') }}?v={{ version() }}" type="text/javascript"></script>
<script src="{{ assets('js/login.js') }}?v={{ version() }}" type="text/javascript"></script>

</body>
</html>
