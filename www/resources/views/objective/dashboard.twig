    <section id="objectives" class="meus-objetivos">
        <h1 class="mb-20 text-center">Meus objetivos</h1>

        <div class="objectives">
            <?php foreach ($objectives as $objective): ?>
            <div class="objective">
                <div class="title">
                    <h3><a href="/objective/{{ $objective->getId() }}/edit">{{ $objective->getTitle() }}</a></h3>
                    <p>{{ $objective->getDescription() }}</p>
                </div>

                <hr>
                <h4 class="text-center"><a href="/objective/{{ $objective->getId() }}/key_results">Key Results</a></h4>
                <hr>

                <?php foreach ($objective->getKeyResults() as $keyResult): ?>
                    <div class="key_result">
                        <div class="text-center key_result_title">
                            <strong>
                                <a href="/objective/{{ $objective->getId() }}/key_results/{{ $keyResult->getId() }}/edit">
                                    {{ $keyResult->getTitle() }}
                                </a>
                            </strong>
                        </div>

                        <div class="key_result_type text-center">
                            {{ $keyResult->formatType() }}
                        </div>

                        <div class="key_result_description">
                            <strong>Descrição</strong>: {{ $keyResult->getDescription() }}
                        </div>
                    </div>
                <?php endforeach; ?>
            </div>
            <?php endforeach; ?>
        </div>
    </section>
{% endblock content %}
